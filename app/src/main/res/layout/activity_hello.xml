<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_select_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相册选择" />

            <Button
                android:id="@+id/btn_read_write_pix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="读取像素点" />

            <Button
                android:id="@+id/btn_split_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分离通道" />

            <Button
                android:id="@+id/btn_merge_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合并通道" />

            <Button
                android:id="@+id/btn_grZero_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="g,r = zero" />


            <Button
                android:id="@+id/btn_brZero_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b,r = zero" />


            <Button
                android:id="@+id/btn_bgZero_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b,g = zero" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加" />

            <Button
                android:id="@+id/btn_subtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="减" />

            <Button
                android:id="@+id/btn_multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乘" />

            <Button
                android:id="@+id/btn_devide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="除" />

            <Button
                android:id="@+id/btn_add_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加weight"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_bitwise_and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bitWiseAnd"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_bitwise_not"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bitWiseNot"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/btn_bitwise_xor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bitWiseXor"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_bitwise_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bitWiseOr"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/btn_brightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亮度"
                android:textAllCaps="false" />

            <SeekBar
                android:id="@+id/sb_bright"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:max="255"
                android:min="0"
                android:progress="0" />

            <TextView
                android:id="@+id/btn_contrast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对比度"
                android:textAllCaps="false" />

            <SeekBar
                android:id="@+id/sb_contrast"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:max="300"
                android:min="0"
                android:progress="100" />

            <Button
                android:id="@+id/btn_normalize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="归一化" />

            <Button
                android:id="@+id/btn_blur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="均值模糊" />

            <Button
                android:id="@+id/btn_gaussian_blur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高斯模糊" />


            <Button
                android:id="@+id/btn_median_blur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中值滤波" />

            <Button
                android:id="@+id/btn_dilate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="膨胀（最大值滤波）" />

            <Button
                android:id="@+id/btn_erode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="腐蚀（最小值滤波）" />

            <Button
                android:id="@+id/btn_bilateralFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高斯双边滤波" />


            <Button
                android:id="@+id/btn_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_src"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/lena" />

        <ImageView
            android:id="@+id/iv_target"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/iv_target2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/iv_target3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</LinearLayout>